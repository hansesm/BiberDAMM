@* Klasse für dieÜbersicht von Krankenkassen *@

@model IEnumerable<BiberDAMM.Models.HealthInsurance>

@{
    ViewBag.Title = "Versicherungsübersicht";
}

<h2>Versicherungsübersicht</h2>

<p>

    @using (Html.BeginForm())
    {
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="Filtern" />
    </p>
    }

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>Verfügbare Aktionen</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @if (ViewBag.TempClient != null)
                    {
                        <input type="submit" value="Löschen" class="btn btn-default" />
                    }
                    else
                    {
                        <button onclick="location.href = '@Url.Action("Edit", new {id = item.Id})';return false;" class="btn btn-default">Bearbeiten</button>
                    }

                </td>
            </tr>
        }

    </table>
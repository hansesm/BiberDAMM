@* View for Detailled viewing HealthInsurances *@

@model BiberDAMM.Models.HealthInsurance

@{
    ViewBag.Title = "Versicherungsdetails";
}

<h2>@ViewBag.Title</h2>

<!--show alert if the HealthInsurance could not be deleted-->
@if (TempData["HealthInsuranceError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="btn btn-outline-primary btn-sm" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Löschen fehlgeschlagen! </strong>@TempData["HealthInsuranceError"]
    </div>
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

    </dl>
</div>
<p>




    <div class="form-actions no-color">

        @if (Session["TempClient"] != null || Session["TempNewClient"] != null)
            {

            <button onclick="location.href = '@Url.Action("AddInsuranceToClient", new { id = Model.Id })';return false;" class="btn btn-outline-primary btn-sm">Krankenversicherung hinzufügen</button>
        }
        else
        {
            <button onclick="location.href = '@Url.Action("Edit", new { id = Model.Id })';return false;" class="btn btn-outline-primary btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></button>

        }



        <button onclick="location.href = '@Url.Action("DeleteConfirmed", new { id=Model.Id})';return false;" class="btn btn-outline-primary btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></button>

        <br />
        <br />
        <button onclick="location.href = '@Url.Action("Index")';return false;" class="btn btn-outline-primary btn-sm">Zurück zur Übersicht</button>
    </div>

</p>
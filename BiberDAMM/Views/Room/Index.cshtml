@* Index-View to view/sort/find rooms *@

@model IEnumerable<BiberDAMM.Models.Room>    
@{ViewBag.Title = "Raumübersicht";}

<head>
    @* TODO Remove, because its already included in bundles ! [HansesM]*@
    @*<link rel="stylesheet" type="text/css" href="~/Content/dynamicDataTable.css">*@
</head>
<body>
    <h2>Raumübersicht</h2>
    <table id="example" class="table table-striped table-hover table-bordered" style="width:100%;" border="1" cellspacing="0">
        <thead class="thead-inverse">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoomNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomType.Name)
                </th>
                <th>Aktionen</th>
            </tr>
        </thead>
        @foreach (var item in Model)  {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modeItem => item.RoomType.Name)
                </td>
                <td>
                    <button onclick="location.href='@Url.Action("Edit", new { id=item.Id })';return false;" class="btn btn-outline-primary btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                    <button onclick="location.href='@Url.Action("Details", new { id=item.Id })';return false;" class="btn btn-outline-primary btn-sm"><i class="fa fa-info" aria-hidden="true"></i></button>
                    <button onclick="location.href='@Url.Action("Delete", new { id=item.Id })';return false;" class="btn btn-outline-primary btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                </td>
            </tr>
        }
    </table>
    </body>

@section Scripts{ 

    // Overview page for beds
    // Author: Jean-PierreK
*@

@model IEnumerable<BiberDAMM.Models.Bed>

@{
    ViewBag.Title = "Bettenuebersicht";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bettenübersicht</h2>

<table id="example" class="table table-striped table-hover table-bordered" style="width:100%;" border="1" cellspacing="0">
    <thead class="thead-inverse">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Room.RoomNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Model)</th>
        </tr>
    </thead>
    <tfoot style="background-color: #263238; text-align: right;">
        <tr>
            <td colspan="3">
                <button title="Bett hinzufügen" onclick="location.href='@(Url.Action("Create", "Bed"))';return false;" style="background-color:transparent; border:hidden;" class="btn btn-outline-primary btn-sm"><i class="fa fa-plus-circle" aria-hidden="true"></i></button>
            </td>
        </tr>
    </tfoot>    
    @foreach (var item in Model)
    {
        <tr onclick="location.href = '@(Url.Action("Details", "Bed", new {id = item.Id}))'">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.Room.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.Model)
            </td>
        </tr>
    }
</table>

@section Scripts{
    <script> $(function () { $("#example").dataTable();})</script>
}
@model BiberDAMM.Models.ContactData

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (TempData["ContactDeleteConfirmation"] != null)
{
    Html.BeginForm("DeleteConfirmed", "ContactData", new { id = Model.Id });
    {
        @Html.AntiForgeryToken()
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>Zum Löschen des Kontaktes bitte</strong>
            <input type="submit" name="Confirm" value="Bestätigen" class="btn btn-default" />
        </div>
    }
}


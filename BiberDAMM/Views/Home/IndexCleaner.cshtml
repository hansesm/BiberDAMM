@using Microsoft.AspNet.Identity
@model IEnumerable<BiberDAMM.Models.Room>  
@{
    ViewBag.Title = "Home Reinigungskraft";
}

<!--show alert "InitialPasswordTrue" if the user uses an initial password set by an administrator [KrabsJ] -->
@if (TempData["InitialPasswordTrue"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Achtung!</strong>@TempData["InitialPasswordTrue"] @Html.ActionLink("Passwort ändern", "ChangePassword", "Manage")
    </div>
}

<!--show alert "UnexpectedFailure" [KrabsJ]-->
@if (TempData["UnexpectedFailure"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Unerwarteter Fehler!</strong>@TempData["UnexpectedFailure"]
    </div>
}

<div class="jumbotron">
    <h1>Willkommen @User.Identity.GetUserName()</h1>
    <p class="lead">Dies ist die Homeseite für Reinigungskräfte</p>
</div>


<h2>Räume, welche heute gereinigt werden müssen</h2>
<table id="example" class="table table-striped table-hover table-bordered" style="width:100%;" border="1" cellspacing="0">
    <thead class="thead-inverse">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType.Name)
            </th>
        </tr>
    </thead>
    <tfoot style="background-color: #263238; text-align: right;">
        <tr>
            <td colspan="2">
                </td>
        </tr>
    </tfoot>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.RoomType.Name)
            </td>
        </tr>
    }
</table>

@section Scripts{
    <script> $(function () { $("#example").dataTable();})</script>
}
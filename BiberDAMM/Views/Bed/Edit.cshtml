    // Page to edit details of bed
    // Author: Jean-PierreK
*@


@model BiberDAMM.Models.Bed
@{
    ViewBag.Title = "Eigenschaften ändern";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eigenschaften bearbeiten von Bett @Html.DisplayFor(model => model.Id)</h2>


@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RoomId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoomId, new { htmlAttributes = new { @type = "number", @min = "1", @step = "1"} })
                @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
         </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (Model.RoomId >= 0)
                {
                    <input type="submit" value="Speichern" class="btn btn-default" />
                }
                else
                {
                    <h5>Bitte überprüfen Sie die Raumangabe!</h5>
                }
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Zurück zur Übersicht", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

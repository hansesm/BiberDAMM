@*
    // Overview page for contacttype
    // Author: AnnaS
*@

@model IEnumerable<BiberDAMM.Models.ContactType>

@{
    ViewBag.Title = "Kontakttypen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (TempData["ContactTypeSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>@TempData["ContactTypeSuccess"]</strong>
    </div>
}
@if (TempData["ContactTypeError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>@TempData["ContactTypeError"]</strong>
    </div>
}

<table class="table table-striped table-hover table-bordered" style="width:100%;" border="1" cellspacing="0">
    <thead class="thead-inverse">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
       
    </thead>
    <tfoot style="background-color: #263238; text-align: right;">
        <tr>
            <td colspan="2">

                <button title="Kontakttype hinzufügen" onclick="location.href='@(Url.Action("Create", "ContactType"))';return false;" style="background-color:transparent; border:hidden;" class="btn btn-outline-primary btn-sm"><i class="fa fa-plus-circle" aria-hidden="true"></i></button>

            </td>
        </tr>
    </tfoot>
    @foreach (var item in Model)
    {
        <tr onclick="location.href = '@(Url.Action("Details", "ContactType", new {contactTypeId = item.Id}))'">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modeItem => item.Name)
            </td>
        </tr>
    }
</table>

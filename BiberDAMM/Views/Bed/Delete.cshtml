@model BiberDAMM.Models.Bed

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Bett löschen";
}

<h2>Soll folgendes Bett wirklich gelöscht werden?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Bett Id:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            In Raum:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.RoomNumber)
        </dd>
        <dt>
            Modellbezeichnung:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Model)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="form-actions no-color">
            <button title="Zur Übersicht" onclick="location.href='@Url.Action("Index")';return false;" class="btn btn-outline-primary btn-sm">Abbrechen</button>
            <input type="submit" value="Löschen" class="btn btn-outline-primary btn-sm" />       
        </div>
    }